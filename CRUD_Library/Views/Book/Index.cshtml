@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<div classs="row">

    <div class="col-2">
        <div class="row">
            <a asp-controller="Book" asp-action="Index" class="btn btn-outline-info">Reset</a>
            <hr />
            <h3>Categories</h3>
            <hr/>
            <div class="list-group">
                @if (Model.Categories != null)
                {
                    foreach (var item in Model.Categories)
                    {
                        <a asp-action="Index" asp-controller="Book" asp-route-categoryId="@item.Id" asp-route-readerId="@Model.SelectedReadersId" class="list-group-item list-group-item-action @(Model.SelectedCategoryId==item.Id ? "active" : ' ') ">@item.Name</a>
                    }
                }

            </div>
        </div>

        <div class="row">
            <h3>Readers</h3>
            <hr/>
            <div class="list-group">
                @if (Model.Readers != null)
                {
                    foreach (var item in Model.Readers)
                    {
                        <a asp-action="Index" asp-controller="Book" asp-route-readerId="@item.Id" asp-route-categoryId="@Model.SelectedCategoryId" class="list-group-item list-group-item-action @(Model.SelectedReadersId==item.Id ? "active" : ' ') ">@item.FIO</a>
                    }
                }
            </div>
    </div>
    </div>

    <div class="col-10">
        @if (TempData.ContainsKey("status"))
        {

            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Messages!</strong>@TempData["status"].
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }


        @if (Model.Books != null && Model.Books.Count() > 0)
        {
            <div class="row">
                @foreach (var item in Model.Books)
                {
                    <div class="card col-4" style="width: 18rem;">
                        <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <hr/>
                            @if (item.BookReaders.Count() < 0){
                                <span class="badge bg-danger rounded-pill">None</span>
                            }
                            else
                            {
                                @foreach (var reader in item.BookReaders)
                            {
                                <span class="badge bg-primary rounded-pill">@reader.Reader.FIO</span>
                            }
                            }
                            <hr/>
                            <strong class="card-text">@item.Category.Name</strong>
                            <p class="card-text">@Html.Raw(@item.Description)</p>
                            <span>@item.Date</span>

                            <br />
                            <a asp-action="Details" asp-controller="Book" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                        </div>
                    </div>
                }
            </div>
        }
        else if(@Model.Books.Count()==0)
        {
            <h3>Not found!!!</h3>
        }
    </div>

</div>




