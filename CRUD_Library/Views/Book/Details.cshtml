
@{
    ViewData["Title"] = "Details";
}

@model DetailViewModel

<h1>Details</h1>

<div class="card">
    <img src="@Model.Book.ImageUrl" class="detail card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Book.Title</h5>
        <p class="card-text">@Model.Book.Category.Name</p>
    </div>
    <ul class="list-group list-group-flush">
        @foreach (var item in @Model.Book.BookReaders)
        {
            <li class="list-group-item">@item.Reader.FIO</li>
        }

    </ul>
    <div class="card-body">
        <span class="card-link">@Html.Raw(@Model.Book.Description)</span>
        <a asp-action="Index" asp-controller="Book" class="btn btn-primary">Back</a>
    </div>

        <div class="container my-5 py-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12 col-lg-10 col-xl-8">
                    <div class="card">

                    @if (@Model.Book.Comments != null)
                    {
                        @foreach (var item in @Model.Book.Comments)
                        {
                            <div class="card-body">
                                <div class="d-flex flex-start align-items-center">
                                    <div>
                                        <h6 class="fw-bold text-primary mb-1">@item.User.Login</h6>
                                        <p class="text-muted small mb-0">
                                            Shared publicly - @item.Date
                                        </p>
                                    </div>
                                </div>

                                <p class="mt-3 mb-4 pb-2">
                                    @item.Text
                                </p>

                            </div>
                        }
                    }
                    <form asp-controller="Comment" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                                <div class="d-flex flex-start w-100">
                                    <div class="form-outline w-100">
                                        <textarea asp-for="Text" class="form-control" id="textAreaExample" rows="4"
                                                      style="background: #fff;"></textarea>
                                        <span asp-validation-for="Text" class="form-text text-danger"></span>                                       
                                        <label asp-for="Text" class="form-label" for="textAreaExample">Comment</label> 
                                        <input asp-for="User.Login" type="hidden" />
                                        <input asp-for="Book.Id" type="hidden" />
                                    </div>
                                </div>
                                <div class="float-end mt-2 pt-1">
                                    <button type="submit" class="btn btn-primary btn-sm">Post comment</button>
                                    <button type="button" class="btn btn-outline-primary btn-sm">Cancel</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

</div>